<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
    >

    <!-- 标题 -->
    <TextView
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_title_font"
        />

    <!-- 图片内容 -->
    <com.lrchao.views.imageview.MyCircleImageView
        android:id="@id/iv_icon"
        android:layout_width="@dimen/item_icon_diameter"
        android:layout_height="@dimen/item_icon_diameter"
        />

    <!-- 箭头 -->
    <ImageView
        android:id="@id/iv_arrow_right"
        style="@style/ArrowRightOnItem"/>
</merge>

