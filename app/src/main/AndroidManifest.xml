<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lrchao.lrchaoviewssample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".tab.MainTabActivity"/>
        <activity android:name=".imageview.ImageViewActivity"/>
        <activity android:name=".toolbar.ToolbarActivity"/>
        <activity android:name=".itemview.ItemViewActivity"/>
        <activity android:name=".webview.WebViewActivity"/>
        <activity android:name=".progressbar.ProgressbarActivity"/>
        <activity android:name=".progressbar.PageLoadingActivity">
        </activity>
        <activity android:name=".swipe.SwipeRefreshActivity">
        </activity>
        <activity android:name=".textview.TextViewActivity">
        </activity>
        <activity android:name=".gridview.GridViewActivity">
        </activity>
        <activity android:name=".popupwindow.PopupWindowActivity">
        </activity>
        <activity android:name=".photo.PhotoActivity">
        </activity>
    </application>

</manifest>